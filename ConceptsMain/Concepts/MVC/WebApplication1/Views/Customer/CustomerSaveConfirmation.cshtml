@model WebApplication1.Customer


@{
    ViewBag.Title = "Customer Save Confirmation";

}
<h2>Customer Save Confirmation</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<div>

    <table>
        <tr>
            <th>Customer Name</th>
        </tr>
        @{
            foreach (Customer cust in (List<Customer>)ViewBag.AllCustomers)
            {
            <tr>
                <td>@cust.Name</td>
            </tr>
            }
        }

    </table>


</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
