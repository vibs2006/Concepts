@model IEnumerable<string>
@{
    ViewBag.Title = "Error";
}

<h2>Error</h2>
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Something Web Wrong, Please try again.
            break;
        case 1: @Model.First();
            break;

        default:
            @: The followin errors were encountered:
            <ul>
                @foreach(string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK","Index", null, new {@class="btn btn-default"})